{% extends 'layouts/layout.twig' %}

{% block title %}
    Home Page
{% endblock %}

{% block css %}
    <link rel="stylesheet" href="/src/public/css/home.css" />
{% endblock %}

{% block content %}
    <div class="col-4"></div>
    <div class="col-4">
        {% if isAuth and user.id == uId %}
            <h1>Welcome, {{ user.username }}!</h1>
        {% else %}
            <h1>Welcome!</h1>
        {% endif %}
    </div>
    <div class="col-4">
        {% if isAuth and user.id == uId %}
            <!-- PROFILE SECTION -->
            <div id="section">
                <h2>User info:</h2>
                <p><i class='fas fa-user'></i> Username: {{ user.username }}</p>
                <hr>
                <p><i class='fas fa-envelope'></i> Email: {{ user.email }}</p>
                <hr>
                <p>
                    <i class='fas fa-calendar-check'></i>
                     Joined: {{ user.date }}
                </p>
        </div>
        {% endif %}
    </div>
{% endblock %}

{% block js %}
    <script src="/src/public/js/home.js"></script>
{% endblock %}
